                Style="{StaticResource MiniTextBlock}"
                x:Name="UCClientSName" 
                Text="Фамилия Фамилия "/>
            <TextBlock 
                Style="{StaticResource MiniTextBlock}"
                x:Name="UCClientPhone" 
                Text="1234123412341234"/>
        </StackPanel>
    </Grid>
</UserControl>
