<UserControl x:Class="DeviceRepairCRM.DeviceFrameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DeviceRepairCRM"
             mc:Ignorable="d" 
             Height="80"
             Width="150" 
             Margin="5"
             Padding="5"
             MouseDown="UserControl_MouseDown"
             MouseMove="UserControl_MouseMove"
             Background="{StaticResource BGPrimaryColor}">
    <Grid>
        <StackPanel>
            <TextBlock 
                Style="{StaticResource MiniTextBlock}"
                x:Name="DeviceArticle" 
                Grid.Row="1"
                Text="SM-A515F"/>
            <TextBlock 
                Style="{StaticResource MiniTextBlock}"
                x:Name="DeviceManufacture" 
                Grid.Row="1"
                Text="Samsung"/>
            <TextBlock 
                Style="{StaticResource MiniTextBlock}"
                x:Name="DeviceModel" 
                Grid.Row="1"
                Text="Galaxy A51"/>
        </StackPanel>
    </Grid>
</UserControl>
