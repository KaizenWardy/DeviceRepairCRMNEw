<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DeviceRepairCRM">


    <Color x:Key="DarkColor">#403C37</Color>
    <Color x:Key="PrimaryColor">#7D887F</Color>
    <Color x:Key="SecondaryColor">#C19F77</Color>
    <Color x:Key="FocusColor">#D9E0C3</Color>

    <Color x:Key="RedColor">#EC2D01</Color>
    <Color x:Key="GreenColor">#008000</Color>
    <Color x:Key="GrayColor">#808080</Color>

    <SolidColorBrush x:Key="BGDarkColor" Color="{StaticResource DarkColor}"/>
    <SolidColorBrush x:Key="BGPrimaryColor" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BGSecondaryColor" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="BGFocusColor" Color="{StaticResource FocusColor}"/>

    <SolidColorBrush x:Key="BGRedColor" Color="{StaticResource RedColor}"/>
    <SolidColorBrush x:Key="BGGreenColor" Color="{StaticResource GreenColor}"/>
    <SolidColorBrush x:Key="BGGrayColor" Color="{StaticResource GrayColor}"/>
</ResourceDictionary>